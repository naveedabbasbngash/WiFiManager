<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="7.0dip"
    android:paddingBottom="7.0dip">

    <ImageView
        android:id="@+id/device_icon"
        android:layout_width="50.0dip"
        android:layout_height="70.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_user"
        android:tint="@color/main" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/button_id"
        android:layout_toRightOf="@+id/device_icon"
        android:orientation="vertical"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip">

        <com.abcd.wifimanager.routerlogin.utils.TextViewFontStyle
            android:id="@+id/hostMacVendor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="16.0sp" />

        <com.abcd.wifimanager.routerlogin.utils.TextViewFontStyle
            android:id="@+id/hostMac"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:lines="1"
            android:text="@string/app_name"
            android:textColor="@color/light_gray"
            android:textSize="14.0sp" />

        <com.abcd.wifimanager.routerlogin.utils.TextViewFontStyle
            android:id="@+id/hostIp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/app_name"
            android:textColor="@color/light_gray"
            android:textSize="14.0sp" />
    </LinearLayout>

    <com.abcd.wifimanager.routerlogin.utils.ButtonFontStyle
        android:id="@+id/button_id"
        android:layout_width="80.0dip"
        android:layout_height="40.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_background"
        android:lines="1"
        android:text="@string/stranger"
        android:textColor="@color/white"
        android:textSize="12.0sp" />
</RelativeLayout>