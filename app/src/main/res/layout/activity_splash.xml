<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:attv="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.lucem.anb.cardslide2.SliderAnimate
        android:layout_width="wrap_content"
        android:layout_above="@+id/lblTextWithoutMistakes"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/slider_animate"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/wifi_manager" />

    </com.lucem.anb.cardslide2.SliderAnimate>

    <com.dragankrstic.autotypetextview.AutoTypeTextView
        android:id="@+id/lblTextWithoutMistakes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:textColor="#ed0c0c"
        android:textStyle="bold"
        android:textSize="30sp"
        attv:animateTextTypeWithoutMistakes="@string/app_name"
        attv:typingSpeed="100" />

</RelativeLayout>